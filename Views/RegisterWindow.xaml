<Window x:Class="PlantManagement.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Ký" Height="350" Width="525">
    <Grid>
        <!-- Username TextBox with placeholder -->
        <Grid>
            <TextBox Name="UsernameTextBox" Width="200" Height="30" Margin="0,50,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" 
                     GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />
            <TextBlock Name="UsernamePlaceholder" Text="Tên đăng nhập" Foreground="Gray" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,55,0,0"/>
        </Grid>

        <!-- PasswordBox with placeholder -->
        <Grid>
            <PasswordBox Name="PasswordBox" Width="200" Height="30" Margin="0,100,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" 
                         GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus" />
            <TextBlock Name="PasswordPlaceholder" Text="Mật khẩu" Foreground="Gray" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,105,0,0"/>
        </Grid>

        <!-- Register Button -->
        <Button Name="RegisterButton" Content="Đăng Ký" Width="200" Height="40" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,150,0,0" Click="RegisterButton_Click"/>
    </Grid>
</Window>
