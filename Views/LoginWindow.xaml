<Window x:Class="PlantManagement.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="400">
    <Grid>
        <TextBox Name="UsernameTextBox" Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0" />
        <PasswordBox Name="PasswordBox" Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0" />
        <Button Name="LoginButton" Content="Đăng Nhập" Width="200" Height="40" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,130,0,0" Click="LoginButton_Click"/>
    </Grid>
</Window>
