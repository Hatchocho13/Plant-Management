<UserControl x:Class="PlantManagement.Views.QuanLyNguoiDungView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="800" Height="450">
    <Grid>
        <!-- Tiêu đề -->
        <TextBlock Text="Quản lý người dùng" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20"/>

        <!-- Sử dụng StackPanel để xếp các nút theo chiều dọc -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,60">
            <Button Content="Thêm người dùng" Width="200" Height="40" Margin="10"/>
            <Button Content="Chỉnh sửa người dùng" Width="200" Height="40" Margin="10"/>
            <Button Content="Xóa người dùng" Width="200" Height="40" Margin="10"/>
        </StackPanel>
    </Grid>
</UserControl>
